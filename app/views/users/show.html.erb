<div class="container">
  <h2>ユーザー詳細</h2>
        <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
         <p> <%= @user.name %></p>
         <p> <%= profile_img(@user) %></p>
        </div>
</div> 

<div class="container">
  <h2>フォロー 一覧</h2>
　<% @user.followed_users.each do |user| %>
　<div class="container-child col-md-2 col-sm-4 col-xs-6 ">
    　<p>　<%= user.name %></p>
      <p>  <%= profile_img(user) %></p>
      <p>  <%= user.email %></p>
  </div> 
  <% end %>
</div> 



<div class="container">
  <h2>フォロワー 一覧</h2>
